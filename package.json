{
  "name": "blog-monorepo",
  "version": "0.0.1",
  "description": "Blog application monorepo with NestJS API and Next.js frontend",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm run start:dev --workspace=@blog/api",
    "dev:web": "npm run dev --workspace=@blog/web",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build:api": "npm run build --workspace=@blog/api",
    "build:web": "npm run build --workspace=@blog/web",
    "build": "npm run build:api && npm run build:web",
    "test:api": "npm run test --workspace=@blog/api",
    "test:e2e": "npm run test:e2e --workspace=@blog/api",
    "lint:api": "npm run lint --workspace=@blog/api",
    "lint:web": "npm run lint --workspace=@blog/web",
    "lint": "npm run lint:api && npm run lint:web"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}